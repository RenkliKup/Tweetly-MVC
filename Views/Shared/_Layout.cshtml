
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tweetly_MVC</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />
    <script type="text/javascript" src="~/DataTables/datatables.min.js"></script>


    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>




    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tweetly_MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="menu" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TakipciList">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid" style="margin: 0px">
        <div class="row">
            <div class="row">
                <div class="row">
                    <div class="profile">
                        <div class="image">
                            <div class="circle-1"></div>
                            <div class="circle-2"></div>
                            <img src="@Hesap.OturumBilgileri.PhotoURL" width="70" height="70" alt="@Hesap.OturumBilgileri.Username">
                        </div>

                        <div class="name">@Hesap.OturumBilgileri.Name</div>
                        <div class="job">   <a id="username" href="https://twitter.com/@Hesap.OturumBilgileri.Username" target="_blank"><i class="bi bi-link-45deg">@Hesap.OturumBilgileri.Username</i></a></div>

                        <div class="stats">
                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.Followers</span>
                                <span class="parameter">Takipçi Sayısı</span>
                            </div>
                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.BegeniSikligi</span>
                                <span class="parameter">Beğeni Sıklığı </span>
                            </div>
                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.LastLikesDate</span>
                                <span class="parameter">Son Beğeni</span>
                            </div>

                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.TweetCount</span>
                                <span class="parameter">Tweet Sayısı</span>
                            </div>


                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.Following</span>
                                <span class="parameter">Takip Edilen</span>
                            </div>
                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.TweetSikligi</span>
                                <span class="parameter">Tweet Sıklığı<br /></span>
                            </div>

                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.LastTweetsDate</span>
                                <span class="parameter">Son Tweet</span>
                            </div>
                            <div class="box">
                                <span class="value">@Hesap.OturumBilgileri.Date</span>
                                <span class="parameter">Kayıt Tarihi</span>
                            </div>

                        </div>


                    </div>
                </div>

            </div>
            @RenderBody()
        </div>
    </div>
    <nav class="menu">
        <a href="#" class="menu__item" data-tooltip="Dashboard">
            <i class="bi bi-house-door-fill"></i>
        </a>
        <a href="@Url.ActionLink("TakipciList","Home")" class="menu__item menu__item--active" id="takipciler" data-tooltip="Takipçiler">
            <i class="bi bi-people-fill"></i>
        </a>
        <a href="#" class="menu__item" data-tooltip="Statistics">
            <i class="bi bi-envelope-fill"></i>
        </a>
        <a href="#" class="menu__item" data-tooltip="Account Security">
            <i class="bi bi-person-dash-fill"></i>
        </a>
        <a href="#" class="menu__item" data-tooltip="Settings">
            <i class="bi bi-gear-fill"></i>
        </a>
    </nav>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
